<Window x:Class="ParticleMaker.Dialogs.ThumbnailViewerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Title="Thumbnail Viewer" WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight"
        WindowStyle="ToolWindow" ResizeMode="NoResize" Width="300" Height="300"
        Name="this">
    
    <Grid DataContext="{Binding ElementName=this}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!--THUMBNAIL OF PARTICLE HERE-->
        <Image Source="{Binding Path=ThumbnailPath}" Margin="15" Stretch="None"/>

        <Button Name="CloseButton" Content="Close" Width="100" Height="25" Grid.Row="1" Margin="15" Click="CloseButton_Click"/>
    </Grid>
</Window>
