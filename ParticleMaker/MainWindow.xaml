<Window xmlns:CustomControls="clr-namespace:ParticleMaker.UserControls"  x:Class="ParticleMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParticleMaker"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1500"
        Name="MainWin" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="245*"></ColumnDefinition>
            <ColumnDefinition Width="397*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!--Color Settings-->
        <CustomControls:NumericUpDown Grid.Column="0" Grid.Row="0" Value="0" Min="0" Max="255" Height="Auto"/>

        <WindowsFormsHost Name="winFormsHost" Grid.Column="2" Grid.Row="0" Grid.RowSpan="2">
            <WindowsFormsHost.Child>
                <wf:PictureBox Name="grfxSurface"></wf:PictureBox>
            </WindowsFormsHost.Child>
        </WindowsFormsHost>
        <CustomControls:ColorValue HorizontalAlignment="Left" Height="155" Margin="34,112,0,0" Grid.Row="1" VerticalAlignment="Top" Width="415" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
