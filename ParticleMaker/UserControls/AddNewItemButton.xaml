<UserControl x:Class="ParticleMaker.UserControls.AddNewItemButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ParticleMaker.UserControls"
             mc:Ignorable="d">

    <Grid>
        <Rectangle Width="5" Height="22" RadiusX="2" RadiusY="2" Fill="Black"/>

        <Rectangle Width="22" Height="5" RadiusX="2" RadiusY="2" Fill="Black"/>

        <!--Shows the other rectangles as gray when the mouse is over top.  This is the hover effect-->
        <Rectangle Name="CoverRect" Fill="White">
            <Rectangle.Style>
                <Style TargetType="Rectangle">
                    <Setter Property="Opacity" Value="0"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=CoverRect, Path=IsMouseOver}" Value="True">
                            <Setter Property="Opacity" Value="0.35"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Rectangle.Style>
        </Rectangle>
    </Grid>
</UserControl>
