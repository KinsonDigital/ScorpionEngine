<UserControl x:Class="ParticleMaker.UserControls.RandomSizeRange"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ParticleMaker.UserControls"
             mc:Ignorable="d" Background="White"
             Name="this">
    
    <Grid DataContext="{Binding ElementName=this}">
        <StackPanel Orientation="Vertical" Margin="5">
            <local:NumericUpDown LabelText="Size Min" Margin="0, 0, 0, 2.5"
                                 Value="{Binding SizeMin, Mode=TwoWay}" Max="10"
                                 Increment="0.01" Decrement="0.01" DecimalPlaces="2"/>
            <local:NumericUpDown LabelText="Size Max" Margin="0, 2.5, 0, 0"
                                 Value="{Binding SizeMax, Mode=TwoWay}" Max="10"
                                 Increment="0.01" Decrement="0.01" DecimalPlaces="2"/>
        </StackPanel>
    </Grid>
</UserControl>
