<UserControl x:Class="ParticleMaker.UserControls.SetupDeployment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ParticleMaker.UserControls"
             mc:Ignorable="d" Background="White" Name="this">
    
    <Grid DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
          d:DataContext="{d:DesignData Source=/UserControls/DesignData/UserControlData.xaml}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <!--DEPLOYMENT PATH-->
        <Label Content="{Binding Path=DeploymentPath}" Grid.Column="0" MaxWidth="150"/>

        <!--EDIT PATH BUTTON-->
        <local:CustomButton x:Name="EditCustomButton" Grid.Column="1" Click="EditCustomButton_Click">
            <local:CustomButton.ButtonContent>
                <Image Source="/ParticleMaker;component/Icons/Edit.png" Width="27" Height="27"/>
            </local:CustomButton.ButtonContent>
        </local:CustomButton>
    </Grid>
</UserControl>
