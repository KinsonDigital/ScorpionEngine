<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <Platforms>x86;x64</Platforms>
    <ApplicationIcon />
    <OutputType>WinExe</OutputType>
    <AssemblyTitle>ScorpTestGame</AssemblyTitle>
    <Product>Kinson Digital - ScorpTestGame</Product>
    <Copyright>Copyright © 2018</Copyright>
    <Company>Kinson Digital</Company>
    <AssemblyName>ScorpTestGame</AssemblyName>
    <Version>0.1.0</Version>
    <FileVersion>0.1.0</FileVersion>
    <AssemblyVersion>0.1.0</AssemblyVersion>
    <StartupObject />
    <RootNamespace>KDScorpTestGame</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="KinsonDigital.ParticleEngine" Version="0.9.3" />
    <PackageReference Include="Microsoft.DotNet.Analyzers.Compatibility" Version="0.2.12-alpha">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\KD.Scorpion.Engine\KD.Scorpion.Engine.csproj" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="REM Make sure that a Graphics directory exists&#xD;&#xA;mkdir &quot;$(TargetDir)Content\Graphics&quot;&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;REM Copy the graphics content to the bin output folder&#xD;&#xA;xcopy &quot;$(ProjectDir)Content\Graphics&quot; &quot;$(TargetDir)Content\Graphics&quot; /Y/E&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;REM Copy the MonoGame Graphics XNB content to the bin output folder&#xD;&#xA;xcopy &quot;$(ProjectDir)Content\bin\Windows\Graphics\*.xnb&quot; &quot;$(TargetDir)Content\Graphics\*.xnb&quot; /Y/E&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;REM Copy the MonoGame Fonts XNB content to the bin output folder&#xD;&#xA;xcopy &quot;$(ProjectDir)Content\bin\Windows\Fonts\*.xnb&quot; &quot;$(TargetDir)Content\Fonts\*.xnb&quot; /Y/E&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;REM Make sure that a Fonts directory exists&#xD;&#xA;mkdir &quot;$(TargetDir)Content\Fonts&quot;&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;REM Copy the TTF Fonts content to the bin output folder&#xD;&#xA;xcopy &quot;$(ProjectDir)Content\Fonts\*.ttf&quot; &quot;$(TargetDir)Content\Fonts&quot; /Y&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;REM Copy the MonoGame Engine plugin to the output folder&#xD;&#xA;copy &quot;$(SolutionDir)MonoScorpPlugin\bin\$(PlatformName)\$(ConfigurationName)\netstandard2.0\MonoScorpPlugin.dll&quot; &quot;$(TargetDir)MonoScorpPlugin.dll&quot; /Y&#xD;&#xA;copy &quot;$(SolutionDir)MonoScorpPlugin\bin\$(PlatformName)\$(ConfigurationName)\netstandard2.0\MonoScorpPlugin.pdb&quot; &quot;$(TargetDir)MonoScorpPlugin.pdb&quot; /Y&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;REM Copy the SDL Engine plugin to the output folder&#xD;&#xA;copy &quot;$(SolutionDir)SDLScorpPlugin\bin\$(PlatformName)\$(ConfigurationName)\netstandard2.0\SDLScorpPlugin.dll&quot; &quot;$(TargetDir)SDLScorpPlugin.dll&quot; /Y&#xD;&#xA;copy &quot;$(SolutionDir)SDLScorpPlugin\bin\$(PlatformName)\$(ConfigurationName)\netstandard2.0\SDLScorpPlugin.pdb&quot; &quot;$(TargetDir)SDLScorpPlugin.pdb&quot; /Y&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;REM Copy the SDL-CS C# wrapper library to the output folder&#xD;&#xA;copy &quot;$(SolutionDir)SDLScorpPlugin\Libs\SDLNet\$(PlatformName)\SDL2-CS.dll&quot; &quot;$(TargetDir)SDL2-CS.dll&quot;&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;REM Copy the native SDL2 library to the output folder&#xD;&#xA;copy &quot;$(SolutionDir)SDLScorpPlugin\Libs\SDL\$(PlatformName)\SDL2.dll&quot; &quot;$(TargetDir)SDL2.dll&quot; /Y&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;REM Copy the native SDL2 imaging required libraries to the output folder&#xD;&#xA;copy &quot;$(SolutionDir)SDLScorpPlugin\Libs\SDL-Image\$(PlatformName)\SDL2_image.dll&quot; &quot;$(TargetDir)SDL2_image.dll&quot; /Y&#xD;&#xA;copy &quot;$(SolutionDir)SDLScorpPlugin\Libs\SDL-Image\$(PlatformName)\libjpeg-9.dll&quot; &quot;$(TargetDir)libjpeg-9.dll&quot; /Y&#xD;&#xA;copy &quot;$(SolutionDir)SDLScorpPlugin\Libs\SDL-Image\$(PlatformName)\libpng16-16.dll&quot; &quot;$(TargetDir)libpng16-16.dll&quot; /Y&#xD;&#xA;copy &quot;$(SolutionDir)SDLScorpPlugin\Libs\SDL-Image\$(PlatformName)\libtiff-5.dll&quot; &quot;$(TargetDir)libtiff-5.dll&quot; /Y&#xD;&#xA;copy &quot;$(SolutionDir)SDLScorpPlugin\Libs\SDL-Image\$(PlatformName)\libwebp-7.dll&quot; &quot;$(TargetDir)libwebp-7.dll&quot; /Y&#xD;&#xA;copy &quot;$(SolutionDir)SDLScorpPlugin\Libs\SDL-Image\$(PlatformName)\zlib1.dll&quot; &quot;$(TargetDir)zlib1.dll&quot; /Y&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;REM Copy the native SDL libraries for dealing with fonts and rendering text&#xD;&#xA;copy &quot;$(SolutionDir)SDLScorpPlugin\Libs\SDL-TTF\$(PlatformName)\SDL2_ttf.dll&quot; &quot;$(TargetDir)SDL2_ttf.dll&quot;&#xD;&#xA;copy &quot;$(SolutionDir)SDLScorpPlugin\Libs\SDL-TTF\$(PlatformName)\libfreetype-6.dll&quot; &quot;$(TargetDir)libfreetype-6.dll&quot;&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;REM Copy the Velcro Physics Plugin to the output folder&#xD;&#xA;copy &quot;$(SolutionDir)VelcroPhysicsPlugin\bin\$(PlatformName)\$(ConfigurationName)\netstandard2.0\VelcroPhysicsPlugin.dll&quot; &quot;$(TargetDir)VelcroPhysicsPlugin.dll&quot; /Y&#xD;&#xA;copy &quot;$(SolutionDir)VelcroPhysicsPlugin\bin\$(PlatformName)\$(ConfigurationName)\netstandard2.0\VelcroPhysicsPlugin.pdb&quot; &quot;$(TargetDir)VelcroPhysicsPlugin.pdb&quot; /Y&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;REM Copy the Main Velcro Physics Library to the output folder&#xD;&#xA;copy &quot;$(SolutionDir)VelcroPhysicsPlugin\bin\$(PlatformName)\$(ConfigurationName)\netstandard2.0\VelcroPhysics.dll&quot; &quot;$(TargetDir)VelcroPhysics.dll&quot; /Y&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;REM Copy the MonoGame.Framework.dll file to the output directory&#xD;&#xA;copy &quot;$(SolutionDir)MonoScorpPlugin\bin\$(PlatformName)\$(ConfigurationName)\netstandard2.0\MonoGame.Framework.dll&quot; &quot;$(TargetDir)MonoGame.Framework.dll&quot; /Y" />
  </Target>

</Project>
